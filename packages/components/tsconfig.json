{
    "extends": "../../tsconfig",
    "compilerOptions": {
        "allowJs": true,
        "noImplicitThis": true,
        "types": [
            "@dcloudio/types",
            "vitest/globals"
        ]
    },
    "include": [
        "src/**/*",
        "docs/**/*",
        "test/**/*",
        "../utils/*"
    ],
    "exclude": [
        "**/node_modules",
        "**/.*/",
        "**/test/**/*"
    ],
    "baseUrl": "./",
    "paths": {
        "~/*": [
            "./src/*"
        ],
        "@/*": [
            "./src/*"
        ]
    }
}