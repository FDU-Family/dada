{
    "compilerOptions": {
        "allowJs": true,
        "noImplicitThis": true,
        "types": [
            "@dcloudio/types",
            "@uni-helper/uni-app-types",
            "vitest/globals"
        ],
        "declaration": true, // 生成类型声明文件
        "declarationDir": "types", // 声明文件的输出目录
    },
    "include": [
        "src/components/**/*.vue",
        "src/types.ts",
        "src/**/hooks/*.ts",
    ],
    "exclude": [
        "**/node_modules",
        "src/components/**/demo/**/*",
        "src/components/**/test/**/*",
    ],
    "baseUrl": "./",
    "paths": {
        "~/*": [
            "./src/*"
        ],
        "@/*": [
            "./src/*"
        ]
    },
}