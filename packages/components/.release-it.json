{
    "git": {
        "commitMessage": "chore(release): components release v${version}",
        "tagName": "v${version}"
    },
    "npm": {
        "publish": true
    },
    "github": {
        "release": true
    },
    "hooks": {
        "after:bump": "echo The version is now ${version}"
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "infile": "CHANGELOG.md",
            "ignoreRecommendedBump": true
        }
    }
}
